{
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "manifest_version": 2,
  "name": "Fulgurator",
  "description": "Bookmark-Manager Chrome App",
  "version": "0.0.1",
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage",
    "fileSystem",
    "unlimitedStorage"
  ],
  "icons": {
    "128": "icon_128.png"
  },
  "author": "Georg Achermann",
  "offline_enabled": true

}